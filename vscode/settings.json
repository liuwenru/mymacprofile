{
  "editor.fontFamily": "'SourceCodePro-Regular', Monaco, 'Courier New'",
  "terminal.integrated.fontFamily": "'SourceCodePro-Regular', Monaco, 'Courier New'",
  "terminal.integrated.defaultProfile.windows": "powershell.exe",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
      // "args": ["attach"]
    }
  },
  "terminal.integrated.inheritEnv": true,
  "window.titleBarStyle": "custom",
  "editor.wordWrap": "on",
  "workbench.colorCustomizations": {
    "minimap.background": "#00002299",
    "editor.selectionHighlightBackground": "#584f4f" // 设置选中时相同单词的背景颜色
  },
  "workbench.colorTheme": "Atom One Dark",
  "debug.console.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.tabs.description": "${task}${separator}${local}${separator}${process}",
  "bookmarks.saveBookmarksInProject": true,
  "bookmarks.useWorkaroundForFormatters": true,
  "bookmarks.experimental.enableNewStickyEngine": true,
  "bookmarks.keepBookmarksOnLineDelete": true,

  "editor.suggestSelection": "first",

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.editor.untitled.hint": "hidden",
  "editor.semanticHighlighting.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/.svn": true
  },
  "markdown.marp.exportType": "pptx",
  // 文件路径自动补全插件
  "path-intellisense.extensionOnImport": true,
  "path-intellisense.showHiddenFiles": true,
  "path-intellisense.absolutePathToWorkspace": true,
  "prettier.useTabs": false,
  "prettier.tabWidth": 2,
  "prettier.endOfLine": "lf",

  // git 配置
  "git.ignoreLegacyWarning": true,
  "git.allowForcePush": false,
  "git.autofetch": "all",
  // golang 配置
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "go.autocompleteUnimportedPackages": true,
  // python 配置
  "python.languageServer": "Pylance",
  // java 配置
  "java.import.generatesMetadataFilesAtProjectRoot": true,
  "java.project.importOnFirstTimeStartup": "automatic",
  "maven.executable.options": "-DskipTests",
  "maven.terminal.useJavaHome": true,
  "java.project.referencedLibraries": ["lib/**/*.jar"],
  // CMake 配置
  "cmake.configureOnOpen": true,
  "redhat.telemetry.enabled": false,
  "Lua.telemetry.enable": false,
  "editor.foldingMaximumRegions": 65000,
  // 退出是否提示确认
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.autoTriggerNextSuggestion": true,
  "[shellscript]": {
    "files.eol": "\n"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "yaml.schemas": {
    "file:///Users/liuwenru/.vscode/extensions/docsmsft.docs-yaml-0.2.9/out/yaml-support/toc.schema.json": "/toc\\.yml/i"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "editor.formatOnSave": true,
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path.linux": "/root/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
    "vscode-kubernetes.kubectl-path.linux": "/root/.local/state/vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.minikube-path.linux": "/root/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube",
    "vscode-kubernetes.minikube-path.mac": "/Users/liuwenru/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
  },
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "java.jdt.ls.java.home": "/Library/Java/JavaVirtualMachines/temurin-17.jdk/Contents/Home",
  "window.zoomLevel": 1
}
